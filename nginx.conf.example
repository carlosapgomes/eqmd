# EquipeMed Nginx Configuration Example
# 
# IMPORTANT: Before using this configuration, replace all instances of:
# /var/www/eqmd_static_YOUR_INSTANCE_ID/
# 
# With your actual static files path, which is shown during installation.
# 
# To determine your static files path:
# 1. Check installation output for "Static files will be served from:"
# 2. Or calculate it manually: 
#    INSTANCE_ID="${EQMD_IMAGE//[^a-zA-Z0-9]/_}"
#    STATIC_FILES_PATH="/var/www/eqmd_static_${INSTANCE_ID}"
# 
# Multi-deployment friendly path format:
# /var/www/{CONTAINER_PREFIX}_static_{SANITIZED_IMAGE_NAME}/
#
# Examples:
#   Hospital A: CONTAINER_PREFIX=hospital_a, Image: ghcr.io/yourorg/eqmd:latest
#   Path: /var/www/hospital_a_static_ghcr_io_yourorg_eqmd_latest/
#
#   Hospital B: CONTAINER_PREFIX=hospital_b, Image: ghcr.io/yourorg/eqmd:latest  
#   Path: /var/www/hospital_b_static_ghcr_io_yourorg_eqmd_latest/
#
#   Staging: CONTAINER_PREFIX=staging, Image: ghcr.io/yourorg/eqmd:v2.0
#   Path: /var/www/staging_static_ghcr_io_yourorg_eqmd_v2_0/

server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;

    # Static files served directly by nginx from unique directory
    # IMPORTANT: Replace with your actual path shown during installation
    # Example paths:
    #   /var/www/eqmd_static_ghcr_io_yourorg_eqmd_latest/
    #   /var/www/eqmd_static_registry_hospital_com_eqmd_app_v1_0_0/
    location /static/ {
        alias /var/www/eqmd_static_YOUR_INSTANCE_ID/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header X-Served-By "nginx-static";
        
        # Gzip compression for static files
        gzip on;
        gzip_vary on;
        gzip_types
            text/css
            text/javascript
            text/xml
            text/plain
            application/javascript
            application/xml+rss
            application/json;
    }

    # Health check endpoint (bypass auth)
    location /health/ {
        proxy_pass http://localhost:8778;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Application requests proxied to container
    location / {
        proxy_pass http://localhost:8778;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (if needed)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Media files still served by Django for security
    # No separate nginx location needed - handled by proxy_pass above
    
    # Security headers
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Hide nginx version
    server_tokens off;
    
    # Limit request size (adjust as needed)
    client_max_body_size 50M;
}

# HTTPS configuration (recommended for production)
server {
    listen 443 ssl http2;
    server_name yourdomain.com www.yourdomain.com;
    
    # SSL certificates (adjust paths as needed)
    ssl_certificate /path/to/your/certificate.crt;
    ssl_certificate_key /path/to/your/private.key;
    
    # SSL security settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # HSTS (optional - uncomment if using HTTPS only)
    # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    
    # Same configuration as HTTP, but with HTTPS
    # IMPORTANT: Replace with your actual path shown during installation
    location /static/ {
        alias /var/www/eqmd_static_YOUR_INSTANCE_ID/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header X-Served-By "nginx-static";
        
        gzip on;
        gzip_vary on;
        gzip_types
            text/css
            text/javascript
            text/xml
            text/plain
            application/javascript
            application/xml+rss
            application/json;
    }

    location /health/ {
        proxy_pass http://localhost:8778;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        proxy_pass http://localhost:8778;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Security headers
    add_header X-Frame-Options SAMEORIGIN always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    server_tokens off;
    client_max_body_size 50M;
}

