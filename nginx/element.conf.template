# Nginx configuration for Element Web (${CHAT_FQDN})
# This is a TEMPLATE file - process with environment variable substitution

server {
    listen 80;
    server_name ${CHAT_FQDN};
    
    # Redirect HTTP to HTTPS in production
    return 301 https://$$server_name$$request_uri;
}

server {
    listen 443 ssl http2;
    server_name ${CHAT_FQDN};

    # SSL configuration (adjust paths as needed for your setup)
    # ssl_certificate /path/to/ssl/cert.pem;
    # ssl_certificate_key /path/to/ssl/private.key;
    
    # Security headers
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options nosniff always;
    add_header X-Frame-Options DENY always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    # CSP for Element Web security
    add_header Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://${MATRIX_FQDN} wss://${MATRIX_FQDN}; font-src 'self'; form-action 'self'; frame-ancestors 'none';" always;

    # Element Web application
    location / {
        proxy_pass http://127.0.0.1:${MATRIX_ELEMENT_PORT};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Cache static assets
        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            proxy_pass http://127.0.0.1:${MATRIX_ELEMENT_PORT};
            proxy_set_header Host $host;
            expires 1y;
            add_header Cache-Control "public, immutable";
        }
    }

    # Optional: Well-known delegation (can be served from either domain)
    # Uncomment if you prefer to serve from chat domain instead of matrix domain
