# Django Core Settings
# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-secret-key-here

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For development, using SQLite (default Django database)
DATABASE_ENGINE=django.db.backends.sqlite3
DATABASE_NAME=db.sqlite3
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_HOST=
DATABASE_PORT=

# Email Backend Configuration
# For development, using console backend (prints emails to console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# Django-allauth Configuration
# ACCOUNT_EMAIL_VERIFICATION=mandatory
ACCOUNT_EMAIL_VERIFICATION=none

# Site Configuration (required by django-allauth)
SITE_ID=1

# Internationalization Settings
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Bahia

# CSRF Trusted Origins
# Comma-separated list of trusted origins for CSRF protection.
# Ensure your production domain(s) are included here when deploying.
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Hospital Configuration
HOSPITAL_NAME="Your Hospital Name"
HOSPITAL_ADDRESS="Your Hospital Address"
HOSPITAL_PHONE="Your Hospital Phone"
HOSPITAL_EMAIL="contact@yourhospital.com"
HOSPITAL_WEBSITE="https://www.yourhospital.com"

# Hospital Branding (optional)
HOSPITAL_LOGO_PATH="images/your-logo.jpg"
HOSPITAL_LOGO_URL=""

# PDF Forms Configuration
HOSPITAL_PDF_FORMS_ENABLED=true
HOSPITAL_PDF_FORMS_PATH=/path/to/your/pdf/forms/templates/
PDF_FORMS_MAX_FILE_SIZE=10485760 # 10MB
PDF_FORMS_REQUIRE_VALIDATION=true

# Security (Production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Logging (optional)
# LOG_LEVEL=INFO
